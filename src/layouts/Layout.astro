const { pathname } = Astro.url;

import { getSiteUrl } from '../utils/getSiteUrl.js';

const siteUrl = getSiteUrl(pathname)

const parts = pathname.split('/').filter(Boolean);

const itUrl = '/' + ['it', 'it', ...parts.slice(2)].join('/');
