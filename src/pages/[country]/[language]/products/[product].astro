export async function getStaticPaths() {
  const locales = [
    { country: "uk", language: "en" },
    { country: "it", language: "it" },
    { country: "de", language: "de" },
  ];
  const indexes = {
    uk: "staging_products_uk_en-gb",
    it: "staging_products_it_it",
    de: "staging_products_de_de",
  };

  const paths = [];

  for (const { country, language } of locales) {
    const index = indexes[country];
    const response = await fetch(
      // `http://localhost:7700/indexes/${index}/search`,
      `https://ms-prd-prd.globusgroup.com/indexes/${index}/search`,
      {
        method: "POST",
        headers: {
          Authorization:
            // "Bearer df7b16d3dda117c0e2118b283b1b3fe21f331daaec06d9eb993dc7eb8ab162ef",
            "Bearer de0eef89f10d34658c1938d82e2203b9f1940d91c043c2c1e5a90cfce9729ebf",
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ q: "", limit: 100000 }),
      },
    );

    const data = await response.json();

    data.hits.forEach((hit) => {
      paths.push({
        params: {
          country,
          language,
          product: hit.slug,
        },
      });
    });
  }

  return paths;
}

const { country, language, product } = Astro.params;

